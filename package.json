{
  "name": "symbols-tree",
  "displayName": "Symbols Tree",
  "description": "Go to filtered symbols (with optional selection).",
  "preview": true,
  "version": "0.5.3",
  "publisher": "ArturoDent",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArturoDent/symbolsTree"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "symbol",
    "jump",
    "move",
    "cursor",
    "select"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension",
  "browser": "./dist/extension",
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "%APP_SETTINGS_HOME%/keybindings.json",
        "url": "./schemas/keybindings.schema.jsonc"
      },
      {
        "fileMatch": "%APP_SETTINGS_HOME%/profiles/*/keybindings.json",
        "url": "./schemas/keybindings.schema.jsonc"
      }
    ],
    "configuration": [
      {
        "title": "Symbols Tree",
        "additionalProperties": false,
        "properties": {
          "symbolsTree.useTypescriptCompiler": {
            "type": "boolean",
            "scope": "resource",
            "default": true,
            "markdownDescription": "Whether to use the more resource-intensive typescript compiler (`tsc`) to produce more detailed symbol entries."
          }
        }
      },
      {
        "title": "Symbols Tree",
        "additionalProperties": false,
        "properties": {
          "symbolsTree.makeTreeView": {
            "type": "boolean",
            "scope": "resource",
            "default": true,
            "markdownDescription": "Make a TreeView that can be shown in the SideBar, etc."
          }
        }
      },
      {
        "title": "Symbols Tree",
        "additionalProperties": false,
        "properties": {
          "symbolsTree.collapseTreeViewItems": {
            "type": "string",
            "enum": [
              "expandOnOpen",
              "collapseOnOpen"
            ],
            "scope": "resource",
            "default": "collapseOnOpen",
            "markdownEnumDescriptions": [
              "Expand all items on when opening or refreshing the TreeView.",
              "Collapse all items on when opening or refreshing the TreeView."
            ]
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "symbolsTree",
          "title": "Symbols Tree",
          "icon": "$(list-tree)"
        }
      ]
    },
    "views": {
      "symbolsTree": [
        {
          "id": "symbolsTree",
          "name": "Symbols Tree",
          "contextualTitle": "Symbols Tree",
          "icon": "$(list-tree)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "symbolsTree.showQuickPick",
          "when": "!symbolsTree.quickPickVisible"
        },
        {
          "command": "symbolsTree.refreshQuickPick",
          "when": "symbolsTree.quickPickVisible"
        },
        {
          "command": "symbolsTree.applyFilter",
          "when": "symbolsTree.visible"
        },
        {
          "command": "symbolsTree.revealSymbol",
          "when": "symbolsTree.visible && symbolsTree.hasSelection"
        },
        {
          "command": "symbolsTree.selectSymbol",
          "when": "symbolsTree.visible && symbolsTree.hasSelection"
        },
        {
          "command": "symbolsTree.refreshTree",
          "when": "symbolsTree.visible"
        },
        {
          "command": "symbolsTree.lock",
          "when": "symbolsTree.visible && !symbolsTree.locked"
        },
        {
          "command": "symbolsTree.unlock",
          "when": "symbolsTree.visible && symbolsTree.locked"
        }
      ],
      "view/title": [
        {
          "command": "symbolsTree.lock",
          "when": "!symbolsTree.locked && view == symbolsTree",
          "group": "navigation@1"
        },
        {
          "command": "symbolsTree.unlock",
          "when": "symbolsTree.locked && view == symbolsTree",
          "group": "navigation@1"
        },
        {
          "command": "symbolsTree.getFilter",
          "when": "view == symbolsTree",
          "group": "navigation@2"
        },
        {
          "command": "symbolsTree.refreshTree",
          "when": "view == symbolsTree",
          "group": "navigation@3"
        },
        {
          "command": "symbolsTree.collapseAll",
          "when": "!symbolsTree.collapsed && view == symbolsTree",
          "group": "navigation@4"
        },
        {
          "command": "symbolsTree.expandAll",
          "when": "symbolsTree.collapsed && view == symbolsTree",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "symbolsTree.selectSymbol",
          "icon": {
            "light": "resources/light/selection.svg",
            "dark": "resources/dark/selection.svg"
          },
          "when": "viewItem == symbolNode",
          "group": "inline@1"
        }
      ]
    },
    "commands": [
      {
        "command": "symbolsTree.showQuickPick",
        "title": "Open a QuickPick of filtered symbols",
        "category": "Symbols Tree",
        "group": "navigation@1"
      },
      {
        "command": "symbolsTree.refreshQuickPick",
        "title": "Refresh to show all symbols",
        "category": "Symbols Tree",
        "group": "navigation@2"
      },
      {
        "command": "symbolsTree.applyFilter",
        "title": "Apply a filter from a keybinding",
        "category": "Symbols Tree",
        "shortTitle": "Filter"
      },
      {
        "command": "symbolsTree.lock",
        "title": "Lock",
        "shortTitle": "Lock",
        "category": "Symbols Tree",
        "icon": {
          "light": "resources/light/lock.svg",
          "dark": "resources/dark/lock.svg"
        }
      },
      {
        "command": "symbolsTree.unlock",
        "title": "Unlock",
        "shortTitle": "Unlock",
        "category": "Symbols Tree",
        "icon": {
          "light": "resources/light/unlock.svg",
          "dark": "resources/dark/unlock.svg"
        }
      },
      {
        "command": "symbolsTree.refreshTree",
        "category": "Symbols Tree",
        "title": "Refresh Tree View",
        "shortTitle": "Refresh Tree View",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "symbolsTree.getFilter",
        "title": "Get filter",
        "category": "Symbols Tree",
        "shortTitle": "Get Filter",
        "icon": "$(filter)"
      },
      {
        "command": "symbolsTree.collapseAll",
        "title": "Collapse All",
        "shortTitle": "Collapse All",
        "category": "Symbols Tree",
        "icon": {
          "light": "resources/light/square-minus.svg",
          "dark": "resources/dark/square-minus.svg"
        }
      },
      {
        "command": "symbolsTree.expandAll",
        "title": "Expand All",
        "shortTitle": "Expand All",
        "category": "Symbols Tree",
        "icon": {
          "light": "resources/light/square-plus.svg",
          "dark": "resources/dark/square-plus.svg"
        }
      },
      {
        "command": "symbolsTree.revealSymbol",
        "title": "Go to selected symbol(s)",
        "shortTitle": "Go",
        "category": "Symbols Tree"
      },
      {
        "command": "symbolsTree.selectSymbol",
        "title": "Select symbol(s)",
        "shortTitle": "Select",
        "category": "Symbols Tree",
        "icon": "$(selection)"
      }
    ],
    "keybindings": [
      {
        "key": "alt+q",
        "command": "symbolsTree.showQuickPick",
        "when": "!symbolsTree.quickPickVisible"
      },
      {
        "key": "alt+q",
        "command": "symbolsTree.refreshQuickPick",
        "when": "symbolsTree.quickPickVisible"
      },
      {
        "key": "alt+f",
        "command": "symbolsTree.applyFilter",
        "when": "symbolsTree.visible"
      },
      {
        "key": "alt+l",
        "command": "symbolsTree.lock",
        "when": "symbolsTree.visible && !symbolsTree.locked"
      },
      {
        "key": "alt+l",
        "command": "symbolsTree.unlock",
        "when": "symbolsTree.visible && symbolsTree.locked"
      },
      {
        "key": "alt+r",
        "command": "symbolsTree.refreshTree",
        "when": "symbolsTree.visible"
      },
      {
        "key": "alt+g",
        "command": "symbolsTree.getFilter",
        "when": "symbolsTree.visible"
      },
      {
        "key": "alt+c",
        "command": "symbolsTree.collapseAll",
        "when": "symbolsTree.visible && !symbolsTree.collapsed"
      },
      {
        "key": "alt+c",
        "command": "symbolsTree.expandAll",
        "when": "symbolsTree.visible && symbolsTree.collapsed"
      },
      {
        "key": "alt+t",
        "command": "symbolsTree.revealSymbol",
        "when": "symbolsTree.visible && symbolsTree.hasSelection"
      },
      {
        "key": "alt+s",
        "command": "symbolsTree.selectSymbol",
        "when": "symbolsTree.visible && symbolsTree.hasSelection"
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.0",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.25.1",
    "fuzzysort": "^3.1.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "ts-debounce": "^4.0.0",
    "typescript": "^5.9.3"
  }
}
